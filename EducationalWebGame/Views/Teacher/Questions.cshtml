@model IEnumerable<EducationalWebGame.Models.Game>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <title>Questions</title>
</head>
<body style="background-color: lightgreen">
    <div class="container" style="margin-top: 15px">
        <form>
            <div class="text-center">
                <label style="font-size: 20px; margin-right: 3px">Избери игра:</label>
                <select name="gameType" style="margin-right: 30px">
                    <option>Бесеница</option>
                    <option>Подреди думата</option>
                    <option>Балони</option>
                    <option>Викторина</option>
                    <option>Шифър</option>
                </select>

                <label style="font-size: 20px; margin-right: 3px">Избери предмет:</label>
                <select name="subject" style="margin-right: 50px">
                    <option>Човекът и природата</option>
                    <option>Човекът и обществото</option>
                </select>

                <button asp-action="LoadQuestions" class="btn btn-sm btn-primary">Зареди въпроси</button>
                <button asp-action="AddOrEditQuestionForm" style="margin-left: 200px; border: hidden; background-color: transparent;">
                    <img title="Добави" style="width: 60px" src="~/images/teachers/add icon.png" />
                </button>
            </div>

            <table class="table table-hover" style="margin-top: 20px">
                <tr>
                    <th>Въпрос</th>
                    <th>Отговор</th>
                    <th>Монети</th>
                    <th>Точки</th>
                </tr>

                @foreach (var que in Model)
                {
                    <tr>
                        <td>@que.Question</td>
                        <td>@que.CorrectAnswer</td>
                        <td>@que.CoinsGiven</td>
                        <td>@que.PointsGiven</td>
                        <td>
                            <a asp-action="AddOrEditQuestionForm" asp-route-id="@que.Id">
                                <img title="Редактирай" src="~/images/teachers/edit icon.png" style="width: 30px" />
                            </a>
                        </td>
                        <td>
                            <a asp-action="DeleteQuestion" asp-route-id="@que.Id" onclick="return confirm('Сигурни ли сте, че искате да изтриете избрания въпрос?')">
                                <img title="Изтрий" src="~/images/teachers/delete icon.png" style="width:30px" />
                            </a>
                        </td>
                    </tr>
                }
            </table>

            <div class="text-center" style="margin-top: 50px">
                <button asp-action="BackToMainMenu" class="btn btn-lg btn-primary" style="margin-right: 350px; margin-left: 250px">Назад</button>
            </div>

        </form>
    </div>
</body>
</html>
