@model EducationalWebGame.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <title>LoadStage</title>
</head>
<body style="background-color: lightgreen">
    <div class="container text-center" style="margin-top: 50px; position: relative">
        <form asp-action="ChoosePath">        

            @foreach (var availablePaths in ViewBag.Paths)
            {
                <input type="hidden" asp-for="@availablePaths" />
            }

            <img src=@ViewBag.Path style="width: 830px; height: 620px">
            <button @ViewBag.Paths[0] name="position" value="top" style="position: absolute; transform: translate(-100%, 110%); background-color: transparent; border: hidden">
                <img src="~/images/pyramid/green arrow.png" />
            </button>
            <button @ViewBag.Paths[1] name="position" value="middle" style="position: absolute; transform: translate(-100%, 500%); background-color: transparent; border: hidden">
                <img src="~/images/pyramid/green arrow.png" />
            </button>
            <button @ViewBag.Paths[2] name="position" value="bottom" style="position: absolute; transform: translate(-100%, 890%); background-color: transparent; border: hidden">
                <img src="~/images/pyramid/green arrow.png" />
            </button>
        </form>
    </div>
</body>
</html>
