
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <title>RegisterForm</title>
</head>
<body style="background-color: lightgreen">
    <div class="container text-center">
        <form>
            <h3 style="margin-bottom:70px">Създаване на профил</h3>
            <div class="container" style="margin-left: 150px">
                <div class="form-group input-group" style=" width:347px; margin-left: 100px; margin-bottom: 10px">
                    <label style="font-size: 25px; margin-right: 10px">Име:</label>
                    <input value="@ViewBag.Name" required class="form-control" type="text" name="name" />
                </div>

                <div class="form-group input-group" style="width:400px; margin-left: 47px; margin-bottom: 10px">
                    <label style="font-size: 25px; margin-right: 10px">Фамилия:</label>
                    <input value="@ViewBag.FamilyName" required class="form-control" type="text" name="familyName" />
                </div>

                <div class="form-group input-group" style="width:400px; margin-left: 37px; margin-bottom: 10px">
                    <label style="font-size: 25px; margin-right: 10px">Длъжност:</label>
                    <select name="role">
                        <option>Ученик</option>
                        <option>Обучаващ учител</option>
                        <option>Ресурсен учител</option>
                    </select>
                </div>

                <div class="form-group input-group" style="margin-left: -50px; margin-bottom: 10px">
                    <label style="font-size: 25px; margin-right: 10px">Обучаващ учител:</label>
                    <select name="educationalTeacher" style="margin-right: 30px">
                        @foreach (var et in ViewBag.EducationalTeachers)
                        {
                            <option>@et</option>
                        }
                    </select>
                    <label style="font-size: 25px; margin-right: 10px">Ресурсен учител:</label>
                    <select name="resourceTeacher">
                        @foreach (var rt in ViewBag.ResourceTeachers)
                        {
                            <option>@rt</option>
                        }
                    </select>
                </div>

                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group input-group" style="width:520px; margin-left: -75px; margin-top: 80px; margin-bottom: 10px">
                            <label style="font-size: 25px; margin-right: 10px">Потребителско име:</label>
                            <input value="@ViewBag.UserName" title="съдържа между 6 и 20 символа - главни и малки латински букви; цифри; _ . (без в края и/или началото и комбинация от двата символа един след друг)" required class="form-control" type="text" name="userName" />
                        </div>
                    </div>
                    <div class="col-md-11">
                        <h5 @ViewBag.HiddenUserName style="color:red; margin-top: 87px; margin-right: 100px">Грешнo потребителско име!</h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group input-group" style="width:380px; margin-left: 66px; margin-bottom: 10px">
                            <label style="font-size: 25px; margin-right: 10px">Парола:</label>
                            <input value="@ViewBag.Password" title="съдържа поне 8 символа -> поне 1 малка и/или главна латинска буква и поне 1 цифра" required class="form-control" type="password" name="password" />
                        </div>
                    </div>
                    <div class="col-md-11">
                        <h5 @ViewBag.HiddenPassword style="color:red; margin-top: 10px; margin-right: 214px">Грешна парола!</h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group input-group" style="width:485px; margin-left: -38px; margin-bottom: 60px">
                            <label style="font-size: 25px; margin-right: 10px">Повтори парола:</label>
                            <input value="@ViewBag.RepeatedPassword" required class="form-control" type="password" name="repeatedPassword" />
                        </div>
                    </div>
                    <div class="col-md-11">
                        <h5 @ViewBag.HiddenRepeatedPassword style="color:red; margin-top: 10px; margin-right: 112px">Грешнa повторена парола!</h5>
                    </div>
                </div>

            </div>

            <h3 style="margin-bottom: 60px">@ViewBag.Message</h3>

            <a style="margin-right: 200px; width:150px" class="btn btn-lg btn-primary" asp-action="BackToLogin">Назад</a>
            <button style="margin-right: 350px; width:200px" class="btn btn-lg btn-primary" asp-action="RegisterUser">Регистрирай се</button>
        </form>
    </div>
</body>
</html>
