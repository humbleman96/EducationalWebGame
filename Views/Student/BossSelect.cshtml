@model EducationalWebGame.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <title>BossSelect</title>
</head>
<body style="background-color:lightgreen">
    <div class="container text-center" style="margin-top: 300px">
        <form asp-action="LoadStage">
            <div class="btn-group-justified">

                @foreach (var boss in ViewBag.Bosses)
                {
                    <input type="hidden" asp-for="@boss" />
                }

                @foreach (var img in ViewBag.BossesImages)
                {
                    <input type="hidden" asp-for="@img" />
                }

                @for (var i = 0; i < ViewBag.BossesImages.Count; i++)
                {
                    <button name="bossName" value="@ViewBag.Bosses[i]" style="border: hidden; background-color: transparent">
                        <img src="@ViewBag.BossesImages[i]" />
                        <span style="display: block; font-size:25px">@ViewBag.BossNames[i]</span>
                    </button>
                }
            </div>
        </form>

        <form asp-action="BackToMainMenu">
            <div class="container text-center" style="margin-top: 150px">
                 <button class="btn btn-lg btn-info" style="width: 150px">Изход</button>
            </div>
        </form>

    </div>
</body>
</html>
