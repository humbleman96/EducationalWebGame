@model EducationalWebGame.Models.Game

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <title>Hangman</title>
</head>
<body style="background-color: lightgreen">
    <div class="container text-center">
        <form asp-action="CheckLetter">
            <div class="row">
                <div class="col-md-4">
                    <h3>
                        <img style="height: 50px; width: 50px; margin-bottom: 20px" src="~/images/rockman/extra life.png" />
                        <span>x @ViewBag.Lives</span>
                    </h3>
                </div>

                <div class="col-md-4">
                    <h3>Точки: @ViewBag.Points</h3>
                </div>

                <div class="col-md-4">
                    <h3>
                        <img src="~/images/rockman/coin.jpg" class="img-responsive" style="height: 40px; width: 40px; margin-bottom: 5px" />
                        <span>@ViewBag.Coins</span>
                    </h3>
                </div>
            </div>

            <div class="row" style="margin-bottom: 30px">
                <h3>@Model.Question</h3>
            </div>

            <div class="row">
                <div class="col-md-3 img-responsive">
                    <img src="~/images/rockman/rockman.png" />
                    <span>
                        <img src="@ViewBag.CurrentPlayerHealth" style="height: 250px; width: 40px" />
                    </span>
                </div>
                <div class="col-md-6">
                    <pre style="font-size: 25px; border: 0px; background-color: transparent">@ViewBag.CurrentAnswer</pre>
                </div>
                <div class="col-md-3 img-responsive">
                    <img class="img-responsive" src="@ViewBag.CurrentBossHealth" style="height: 250px; width:40px; margin-left: 100px" />
                    <span>
                        <img src="@ViewBag.CurrentBossImage" style="height: 160px" />
                    </span>
                </div>
            </div>

            <div class="col-md-12" style="margin-bottom : 10px; margin-left: 25px; margin-top: -120px">
                @foreach (var colour in ViewBag.Colours)
                {
                    <input type="hidden" asp-for="@colour" />
                }
                @foreach (var dis in ViewBag.DisabledLetters)
                {
                    <input type="hidden" asp-for="@dis" />
                }
                <button @ViewBag.DisabledLetters[19] name="letter" value="У" class="btn-primary btn-lg" style="color: @ViewBag.Colours[19];">У</button>
                <button @ViewBag.DisabledLetters[5] name="letter" value="Е" class="btn-primary btn-lg" style="color: @ViewBag.Colours[5]">Е</button>
                <button @ViewBag.DisabledLetters[8] name="letter" value="И" class="btn-primary btn-lg" style="color: @ViewBag.Colours[8]">И</button>
                <button @ViewBag.DisabledLetters[24] name="letter" value="Ш" class="btn-primary btn-lg" style="color: @ViewBag.Colours[24]">Ш</button>
                <button @ViewBag.DisabledLetters[25] name="letter" value="Щ" class="btn-primary btn-lg" style="color: @ViewBag.Colours[25]">Щ</button>
                <button @ViewBag.DisabledLetters[10] name="letter" value="К" class="btn-primary btn-lg" style="color: @ViewBag.Colours[10]">К</button>
                <button @ViewBag.DisabledLetters[17] name="letter" value="С" class="btn-primary btn-lg" style="color: @ViewBag.Colours[17]">С</button>
                <button @ViewBag.DisabledLetters[4] name="letter" value="Д" class="btn-primary btn-lg" style="color: @ViewBag.Colours[4]">Д</button>
                <button @ViewBag.DisabledLetters[7] name="letter" value="З" class="btn-primary btn-lg" style="color: @ViewBag.Colours[7]">З</button>
                <button @ViewBag.DisabledLetters[22] name="letter" value="Ц" class="btn-primary btn-lg" style="color: @ViewBag.Colours[22]">Ц</button>
            </div>

            <div class="col-md-12" style="margin-bottom: 10px; margin-left:25px">
                <button @ViewBag.DisabledLetters[27] name="letter" value="Ь" class="btn-primary btn-lg" style="color: @ViewBag.Colours[27]">Ь</button>
                <button @ViewBag.DisabledLetters[29] name="letter" value="Я" class="btn-primary btn-lg" style="color: @ViewBag.Colours[29]">Я</button>
                <button @ViewBag.DisabledLetters[0] name="letter" value="А" class="btn-primary btn-lg" style="color: @ViewBag.Colours[0]">А</button>
                <button @ViewBag.DisabledLetters[14] name="letter" value="О" class="btn-primary btn-lg" style="color: @ViewBag.Colours[14]">О</button>
                <button @ViewBag.DisabledLetters[6] name="letter" value="Ж" class="btn-primary btn-lg" style="color: @ViewBag.Colours[6]">Ж</button>
                <button @ViewBag.DisabledLetters[3] name="letter" value="Г" class="btn-primary btn-lg" style="color: @ViewBag.Colours[3]">Г</button>
                <button @ViewBag.DisabledLetters[18] name="letter" value="Т" class="btn-primary btn-lg" style="color: @ViewBag.Colours[18]">Т</button>
                <button @ViewBag.DisabledLetters[13] name="letter" value="Н" class="btn-primary btn-lg" style="color: @ViewBag.Colours[13]">Н</button>
                <button @ViewBag.DisabledLetters[2] name="letter" value="В" class="btn-primary btn-lg" style="color: @ViewBag.Colours[2]">В</button>
                <button @ViewBag.DisabledLetters[12] name="letter" value="М" class="btn-primary btn-lg" style="color: @ViewBag.Colours[12]">М</button>
            </div>

            <div class="col-md-12" style="margin-bottom : 10px; margin-left: 25px">
                <button @ViewBag.DisabledLetters[23] name="letter" value="Ч" class="btn-primary btn-lg" style="color: @ViewBag.Colours[23]">Ч</button>
                <button @ViewBag.DisabledLetters[28] name="letter" value="Ю" class="btn-primary btn-lg" style="color: @ViewBag.Colours[28]">Ю</button>
                <button @ViewBag.DisabledLetters[9] name="letter" value="Й" class="btn-primary btn-lg" style="color: @ViewBag.Colours[9]">Й</button>
                <button @ViewBag.DisabledLetters[26] name="letter" value="Ъ" class="btn-primary btn-lg" style="color: @ViewBag.Colours[26]">Ъ</button>
                <button @ViewBag.DisabledLetters[20] name="letter" value="Ф" class="btn-primary btn-lg" style="color: @ViewBag.Colours[20]">Ф</button>
                <button @ViewBag.DisabledLetters[21] name="letter" value="Х" class="btn-primary btn-lg" style="color: @ViewBag.Colours[21]">Х</button>
                <button @ViewBag.DisabledLetters[15] name="letter" value="П" class="btn-primary btn-lg" style="color: @ViewBag.Colours[15]">П</button>
                <button @ViewBag.DisabledLetters[16] name="letter" value="Р" class="btn-primary btn-lg" style="color: @ViewBag.Colours[16]">Р</button>
                <button @ViewBag.DisabledLetters[11] name="letter" value="Л" class="btn-primary btn-lg" style="color: @ViewBag.Colours[11]">Л</button>
                <button @ViewBag.DisabledLetters[1] name="letter" value="Б" class="btn-primary btn-lg" style="color: @ViewBag.Colours[1]">Б</button>
            </div>
        </form>

        <div class="container" style="margin-top: 70px">
            <form asp-action="RevealLetterH">
                <div class="row">
                    <div class="col-md-3">
                        <button @ViewBag.DisabledClue style="background-color: transparent; border: hidden;">
                            <img style="height: 100px" src="~/images/clue/clue.png" class="img-responsive" />
                        </button>
                    </div>
                    <div class="col-md-6">
                        <img src="@ViewBag.Message" />
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </form>

            <form asp-action="ResetForm">
                <div class="container" style="margin-top: 10px">
                    <button @ViewBag.HiddenContentButton class="btn-primary btn-lg">@ViewBag.ContentButton</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
